{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ES2020",
    "target": "ES2020",
    "strict": true,
    "allowJs": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "incremental": true,
    "types": [
      "vitest/importMeta",
      "vitest/globals"
    ],
    "rootDir": ".",
    "paths": {
      "@lib": [
        "./src/lib/index"
      ]
    }
  },
  "exclude": [
    "./dist",
    "./www"
  ]
}