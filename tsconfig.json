{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2020",
    "skipLibCheck": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "incremental": true,
    "allowJs": true,
    "strict": true,
    "types": [
      "vitest/importMeta",
      "vitest/globals"
    ],
    "rootDir": ".",
    "paths": {
      "@lib/*": [
        "./src/lib/*"
      ]
    }
  },
  "exclude": [
    "./demo/*.js",
    "./dist",
    "./www"
  ],
}