{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2020",
    "skipLibCheck": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "incremental": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": [
        "lib/*",
      ],
      "@src/*": [
        "src/*",
      ]
    },
  },
  "include": [
    "src",
    "lib"
  ],
  "exclude": [
    "demo/*.js",
    "dist",
    "docs"
  ],
}